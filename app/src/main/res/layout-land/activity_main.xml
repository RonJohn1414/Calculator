<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/editTextResult"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/operation"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/newNumber"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Operand"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:id="@+id/operation"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextResult"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/newNumber"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextResult"/>
    <Button
            android:text="1"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            app:layout_constraintStart_toStartOf="@+id/button4"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button4" android:textSize="24sp"/>
    <Button
            android:text="2"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/button1"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button1"
            android:textSize="24sp"/>
    <Button
            android:text="3"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button2"
            android:textSize="24sp"/>
    <Button
            android:text="4"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button7"
            app:layout_constraintStart_toStartOf="@+id/button7"
            android:textSize="24sp"/>
    <Button
            android:text="5"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            app:layout_constraintStart_toEndOf="@+id/button4"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button4" android:textSize="24sp"/>
    <Button
            android:text="6"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button5"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button5"
            android:textSize="24sp"/>
    <Button
            android:text="7"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.376"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/newNumber" android:textSize="24sp"/>
    <Button
            android:text="8"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            app:layout_constraintStart_toEndOf="@+id/button7"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button7"
            android:textSize="24sp"/>
    <Button
            android:text="9"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            app:layout_constraintStart_toEndOf="@+id/button8"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button8"
            android:textSize="24sp"/>
    <Button
            android:text="0"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            app:layout_constraintStart_toStartOf="@+id/button1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button1" android:textSize="24sp"/>
    <Button
            android:text="/"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDivide"
            app:layout_constraintStart_toEndOf="@+id/button9"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9"
            android:textSize="24sp"/>
    <Button
            android:text="*"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMultiply"
            app:layout_constraintStart_toEndOf="@+id/button6"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button6"
            android:textSize="24sp"/>
    <Button
            android:text="-"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSubtract"
            app:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button3"
            android:textSize="24sp"/>
    <Button
            android:text="+"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAdd"
            app:layout_constraintStart_toEndOf="@+id/buttonEquals"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonEquals"
            android:textSize="24sp"/>
    <Button
            android:text="."
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDot"
            app:layout_constraintStart_toEndOf="@+id/button0"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button0"
            android:textSize="24sp"/>
    <Button
            android:text="="
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEquals"
            app:layout_constraintStart_toEndOf="@+id/buttonDot"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot"
            android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>